<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".lab6.MainActivityLAB6">

    <TextView
            android:text="Текст уведомления"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName2"/>
    <Button
            android:text="Создать уведомление"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/button13"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3"
            android:layout_marginBottom="2dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button15" app:layout_constraintStart_toStartOf="parent"
            android:onClick="addNotification"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName2"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginBottom="17dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp"/>
    <TextView
            android:text="Заголовок"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="70dp" android:layout_marginStart="2dp"
            android:layout_marginBottom="6dp" app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"/>
    <TextView
            android:text="Дата и время уведомления"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="2dp" app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2"
            android:layout_marginBottom="14dp" app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName3"/>
    <Button
            android:text="Список уведомлений"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button15"
            app:layout_constraintTop_toBottomOf="@+id/button13" android:layout_marginBottom="304dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp" android:onClick="onClickView"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextTextPersonName3"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            android:layout_marginBottom="13dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button13" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:layout_marginEnd="1dp"
            android:onClick="getDate"
    />
</androidx.constraintlayout.widget.ConstraintLayout>