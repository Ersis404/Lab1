<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".lab1.MainActivityLAB1">

    <TextView
            android:text="Введите текст для передачи на другую Activity:"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/textView14"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@+id/textGet"
            app:layout_constraintBottom_toTopOf="@+id/textGet" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textGet"/>
    <EditText
            android:layout_width="320dp"
            android:layout_height="0dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/textGet"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" app:layout_constraintBottom_toTopOf="@+id/button25"/>
    <Button
            android:text="Передать"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/button25"
            app:layout_constraintTop_toBottomOf="@+id/textGet"
            android:layout_marginBottom="604dp" app:layout_constraintEnd_toEndOf="@+id/textGet"
            app:layout_constraintStart_toStartOf="@+id/textGet"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="onClick1"/>
</androidx.constraintlayout.widget.ConstraintLayout>