<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".lab4.Lab4AsyncTaskActivity">

    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:scrollbars="vertical"
            android:id="@+id/textView5"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp" android:layout_marginEnd="22dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Сейчас играет:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView10"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/textVievv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="23dp"/>
    <TextView
            android:text="Режим работы приложения:"
            android:layout_width="0dp"
            android:layout_height="40dp" android:id="@+id/textVievv"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/allMusics" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintEnd_toStartOf="@+id/status" android:layout_marginEnd="32dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/status"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toEndOf="@+id/textVievv" app:layout_constraintTop_toBottomOf="@+id/allMusics"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="316dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="16dp"
    />
    <Button
            android:text="Очистить базу Данных"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lolo"
            android:layout_marginTop="27dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/allMusics"
            android:layout_marginTop="41dp"
            android:layout_marginBottom="27dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/status" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="6dp" android:layout_marginEnd="6dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>